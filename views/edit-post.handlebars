
<article class="container d-flex flex-column">
  <a href="/dashboard"><i class="fa-solid fa-circle-xmark fa-xl mt-3"></i> </a>
  <div class="m-5">
    <h2 class="d-flex justify-content-center">
      Edit Post
    </h2>
    <form class="edit-post-form">
      {{!-- edit post form --}}
      <div class="form-floating">
        {{!-- post title input --}}
        <input name="post-title" type="text" value="{{post.title}}" class="form-control mb-3" placeholder="Title" id="post-title"/>
        <label for="post-title">Title</label>
        {{!-- post textarea for content --}}
        <div class="form-floating">
          <textarea name="post-content" class="form-control" value="{{post.post_content}}" placeholder="Talk your Tech" id="post-content">{{post.post_content}}</textarea>
          <label for="post-content">Talk your Tech</label>
        </div>
      </div>
      <div class="userDate">
        {{!-- post date --}}
        by YOU on {{format_date post.created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
      </div>

      <div class="d-flex justify-content-end">
        {{!-- save edit button --}}
        <button type="submit" id="save-btn" class="btn btn-success mx-2">Save post</button>
        {{!-- delete post button --}}
        <button type="button" class="delete-post-btn btn btn-danger">Delete Post</button>
      </div>
    </form>
  </div>
</article>
{{!-- end of edit post form --}}

{{!-- comment form --}}
<form class="comment-form container mt-5">
  {{!-- comment textarea --}}
  <div class="form-floating mb-1">
    <textarea class="form-control comment-body" placeholder="Reply to Post" id="comment-body" name="comment-body"></textarea>
    <label for="comment-body">Reply to Post</label>
  </div>

{{!-- submit comment button --}}
  <div class="d-flex justify-content-end mb-3">
    <button type="submit" class="btn btn-secondary">Add Comment</button>
  </div>
</form>



{{!-- comments list --}}
{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>